<h1 class = "text-danger p-3 mb-2 bg-success text-white text-center">All Items</h1>
<%= link_to "Download Items CSV", inventory_items_path(format: 'csv')%>
<%= form_tag(search_path, :method => :"get") do %>
<div class="input-group">
  <%= search_field_tag :search, params[:search], placeholder: "Type",class:"form-control" %>
<div class="input-group-btn">
  <%= button_tag "Search for item", :class => 'btn btn-info glyphicon glyphicon-search', :name =>nil %>
</div>
</div>
<% end %>
<table>
	<tr>
		<th>Item Id</th>
		<th>Item name</th>
		<th>Item price</th>
		<th>Item rating</th>
		<th>Item Quantity</th>
		<th>Update Item</th>
		<th>Delete Item</th>
	</tr>
  <% @items.each do |item| %>
	<tr>
		<td><%= item.id %></td>
		<td><%= item.name %></td>
		<td><%= item.price %></td>
		<td><%= item.rating %></td>
		<td><%= item.quantity %></td>
		 <% if can? :update, item %>
        <td><a href="/inventories/<%= item.id %>/items/<%= item.id %>/edit" ><button type="button" class="btn btn-warning">Update</button></a></td>
        <td><a href="/inventories/<%= item.id %>/items/<%= item.id %>" ><button type="button" class="btn btn-danger">Delete</button></a></td>
      <% end %>
	</tr>
  <% end %>
</table>